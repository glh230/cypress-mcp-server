# Cypress MCP Server Configuration
# Copy this file to cypress-mcp.config.yaml and customize as needed

cypress:
  # Path to your Cypress project (optional, defaults to current directory)
  projectPath: .
  
  # Default browser for test runs
  browser: chrome  # Options: chrome, firefox, edge, electron
  
  # Run tests in headless mode by default
  headless: true
  
  # Base URL for your application
  baseUrl: http://localhost:3000
  
  # Viewport dimensions
  viewportWidth: 1280
  viewportHeight: 720
  
  # Timeout settings (in milliseconds)
  defaultCommandTimeout: 4000
  requestTimeout: 5000
  responseTimeout: 30000

mcp:
  name: cypress-mcp-server
  version: 1.0.0

security:
  # List of allowed commands (use ['*'] to allow all)
  allowedCommands:
    - '*'
  
  # Maximum execution time per test run (in milliseconds)
  maxExecutionTime: 300000  # 5 minutes

